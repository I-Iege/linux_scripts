# Upgrade & Update your system
    sudo pacman -Syu

# Install Google Chrome
    sudo pacman -Syu --needed base-devel git
    sudo pacman -Syu yay
    yay -Syu google-chrome

# Install proprietary nVidia driver
    # Check kernel version
        uname -r
    # Install kernel headers 
        pacman -S linux-headers
    # Check your card model
        lspci | grep NVIDIA
    # Download driver from nvidia's website
    # Press Ctrl + Alt + F2 and login as root
    # Disable the graphical target:
        systemctl isolate multi-user.target
    # Unload nVidia drivers:
        modprobe -r nvidia-drm
    # Install new nvidia drivers:
        sh nvidia-driver-xxx.run
    # Select 'Yes' repeatedly when prompted
    # Restart graphical target:
        systemctl start graphical.target
        
# Create bootable macOS pendrive
    # Install prerequisities
        sudo pacman -S qemu
    # Clone kholia-OSX and open the folder
        git clone --depth 1 --recursive https://github.com/kholia/OSX-KVM.git
        cd OSX-KVM
    # Download the dmg file for macOS
        ./fetch-macOS-v2.py
    # Convert dmg to img
        qemu-img convert BaseSystem.dmg -O raw BaseSystem.img
    # Write it to your pendrive
        dd if=/path/to/osx.img of=/dev/sdX && sync
        ( Example: sudo dd if=/home/mateg/OSX-KVM/BigSur.img of=/dev/sda && sync )

# Create bootable macOS pendrive alternative
    # Clone kholia-OSX and open the folder
        git clone --depth 1 --recursive https://github.com/kholia/OSX-KVM.git
        cd OSX-KVM
    # Download the dmg file for macOS
        ./fetch-macOS-v2.py
    # Install dmg2img
        sudo pacman -S dmg2img
    # Transfer dmg to pendrive
        sudo dmg2img -v -i /path/to/image_file.dmg -o /dev/sdb
          
# Restart KDE
    kquitapp5 plasmashell || killall plasmashell && kstart5 plasmashell
    
# https://github.com/foxlet/macOS-Simple-KVM
